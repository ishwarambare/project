{% extends "base_ajax.html.j2" %}

{% block content %}

    <div class="container">
    <div class="col-5">
        <form id="post-form">
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            {{ as_crispy_field(form.name) }}
            {{ as_crispy_field(form.category) }}
            {{ as_crispy_field(form.description ) }}
            {{ as_crispy_field(form.image) }}
            {{ as_crispy_field(form.is_active) }}
            <input type="submit" class="btn btn-primary" value="Create Friend"/>
        <form>
    </div>
    <hr/>
{% endblock content %}


{% block javascript %}
    <script>

        $("#post-form").submit(function (e) {
            e.preventDefault();
            var serializedData = $(this).serialize();
            $.ajax({
                    type: 'POST',
                    url: "{{ url('post_uplode')}}",
                    data: serializedData,
                    success: function (response) {
                        $("#post-form").trigger('reset');
                        var instance = JSON.parse(response["instance"]);
                        var fields = instance[0]["fields"];
                        $("#my_friends tbody").prepend(
                            `<tr>
                    <td>${fields["name"] || ""}</td>
                    </tr>`
                        )
                    },
                }
            )
        })
    </script>
{% endblock javascript %}

