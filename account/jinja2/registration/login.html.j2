{% extends "base.html.j2" %}
{% block body %}
    <h1>Log-in</h1>
    {% if form.errors %}
        <p>
            Your username and password didn't match.
            Please try again.
        </p>
    {% else %}
{#        <p>if you dont have an account<a class="btn btn-outline-success my-2 my-sm-0" href="{{ url("signup") }}">SignUp</a>#}
{#        </p>#}
        <p>if you dont have an account<a class="btn btn-outline-success my-2 my-sm-0"
                                         href="{{ url("account:register") }}">SignUp</a></p>
    {% endif %}
    <div class="login-form">
        <form action="{{ url('account:login') }}" method="post">
            {{ as_crispy(form) }}
            <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
            <input type="hidden" name="next" value="{{ next }}"/>
            <p><input type="submit" value="Log-in"></p>
        </form>
    </div>
{% endblock %}
